# EditorConfig ayuda a mantener estilos de codificación consistentes
root = true

# Archivos de código fuente (JS, TS, JSX, TSX, JSON, CSS, SCSS, HTML, MD, etc.)
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 180

# Archivos Markdown: no recortar espacios (para listas y tablas)
[*.md]
trim_trailing_whitespace = false

# Archivos YAML: mantener indentación de 2
[*.{yml,yaml}]
indent_size = 2

# Archivos JSON: mantener indentación de 2
[*.json]
indent_size = 2

# Archivos HTML y CSS
[*.{html,css,scss}]
indent_size = 2

# Archivos de configuración (env, lockfiles)
[*.{env,lock}]
insert_final_newline = false
